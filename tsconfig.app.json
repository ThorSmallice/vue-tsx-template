{
  "extends": "@vue/tsconfig/tsconfig.json",
  
  "compilerOptions": {
     
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
   
   

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
   
    "noFallthroughCasesInSwitch": true,
     
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  
}
